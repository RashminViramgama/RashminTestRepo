@page
@model UCDPNextGenPOCs.Pages.LoginModel
@using FluentValidation.AspNetCore;
 
<div class="">
    <form method="post" class="login-form">
        @{
            <div class="text-center mb-3"><b>Welcome to the Uniform Collateral Data Portal</b></div>
            if (@Model.ErrorMessage != null){
            <div class="validation-wrapper mb-3">
                <div class="d-flex align-items-center">
                        <i class="material-symbols-outlined">
                            cancel
                        </i>
                    <span>@Model.ErrorMessage </span>
                </div>
            </div>
            }
            <div class="form-group mb-3">
                <label asp-for="_objLogin.Username"></label>
                @if (@Model.ErrorCode == Model.objEnumErrorCodes.ToString())
                {
                    <input asp-for="_objLogin.Username" class="form-control validation-error-text" />
                }
                else
                {
                    <input asp-for="_objLogin.Username" class="form-control" />
                }
            </div>

            <div class="form-group mb-3">
                <label asp-for="_objLogin.Password"></label>

                @if (@Model.ErrorCode == Model.objEnumErrorCodes.ToString())
                {
                    <input type="password" asp-for="_objLogin.Password" class="form-control validation-error-text" />
                }
                else
                {
                    <input type="password" asp-for="_objLogin.Password" class="form-control" />
                }
            </div>
            <button type="submit" class="btn w-100 rounded-pill btn-success mb-3">Login</button>
        }
        <div class="text-center border-top pt-3">

            <a href="" name="ForgetPassword">Forget your Password</a>
            <br />
            <div>For Assistance please contact the UCDP Support Center at 800-111-2222</div>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
